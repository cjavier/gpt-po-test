{
  "name": "@paybook/sync-widget",
  "version": "4.17.2",
  "author": {
    "email": "lalo.espinosa@paybook.me",
    "name": "Eduardo Espinosa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paybook/sync-widget"
  },
  "keywords": [
    "paybook",
    "sync",
    "widget"
  ],
  "homepage": "https://syncfy.com",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/widget.common.js",
  "scripts": {
    "serve": "npm run version && vue-cli-service serve",
    "build": "npm run version && npm run theme-build && vue-cli-service build",
    "build.lib": "npm run version && npm run theme-build && vue-cli-service build --target lib --inline-vue --entry src/main.js --name widget",
    "build.development.server": "npm run version && npm run theme-build && vue-cli-service build --mode development.server",
    "lint": "vue-cli-service lint",
    "lint-autofix": "eslint --ext .vue,.js src --fix",
    "theme-watch": "et --watch --config ./src/assets/styles/theme-variables.scss --out ./src/assets/styles/theme/",
    "theme-build": "et --config ./src/assets/styles/theme-variables.scss --out ./src/assets/styles/theme/",
    "prettier": "prettier --parser scss --write src/**/*.scss",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "release": "npm run build.lib && standard-version",
    "version": "node version.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "element-ui": "^2.4.5",
    "firebase": "^8.2.5",
    "git-describe": "^4.0.4",
    "node-jose": "^2.0.0",
    "normalize.css": "^8.0.1",
    "ua-parser-js": "^0.7.20",
    "v-money": "^0.8.1",
    "vue": "^2.6.10",
    "vue-i18n": "^8.12.0",
    "vue-resize": "^0.4.5",
    "vue-rollbar": "^1.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-e2e-cypress": "^4.5.11",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-plugin-unit-mocha": "^4.5.11",
    "@vue/cli-service": "^4.5.11",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "chai": "^4.1.2",
    "element-theme": "^2.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "sass-loader": "^7.1.0",
    "standard-version": "^7.1.0",
    "sync-element-theme": "^2.11.2",
    "terser-webpack-plugin": "^4.2.3",
    "vue-cli-plugin-element": "^1.0.1",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.scss": [
      "npm run prettier",
      "git add"
    ]
  },
  "element-theme": {
    "theme": "sync-element-theme"
  }
}
